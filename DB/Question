CREATE TABLE Questions (
  id INT AUTO_INCREMENT PRIMARY KEY,
  question_text TEXT NOT NULL,
  options JSON NOT NULL,          -- เก็บตัวเลือก (เช่น {"A":"คำตอบ1", "B":"คำตอบ2", ...})
  correct_answer VARCHAR(10) NOT NULL, -- เช่น "A" หรือ "B"
  category_id INT,               -- หมวดหมู่คำถาม (ถ้ามี)
  created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);
